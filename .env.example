# Environment Variables for RAG Application
# Copy this file to .env and update with your values

# OpenRouter API Configuration (Required)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_DEFAULT_MODEL=google/gemini-2.5-flash

# Database Configuration 
# Railway: Uses DATABASE_URL automatically
# Local: Specify individual components
DB_NAME=rag_system
DB_USER=joe
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# Django Configuration
SECRET_KEY=django-insecure-temp-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# RAG Configuration
SIMILARITY_THRESHOLD=0.1
MAX_CHUNKS_RETURNED=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
MAX_FILE_SIZE_MB=5
EMBEDDINGS_MODEL=all-mpnet-base-v2

# Default Superuser Configuration (for development)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=testpass123
DJANGO_SUPERUSER_EMAIL=admin@localhost.local

# Railway Production Settings (automatically set by Railway)
# RAILWAY_ENVIRONMENT=production
# DATABASE_URL=postgresql://user:pass@host:port/dbname
# PGDATABASE=railway
# PGUSER=postgres
# PGPASSWORD=auto-generated
# PGHOST=host.railway.internal
# PGPORT=5432
