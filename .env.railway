# Railway.com Environment Variables Template
# Copy these to your Railway project's environment variables

# Django Configuration
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION-use-proper-secret-key
DEBUG=False
RAILWAY_ENVIRONMENT=production
ALLOWED_HOSTS=*.railway.app,*.up.railway.app

# OpenRouter Configuration (Required)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_DEFAULT_MODEL=google/gemini-2.5-flash

# RAG System Configuration
SIMILARITY_THRESHOLD=0.1
MAX_CHUNKS_RETURNED=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
MAX_FILE_SIZE_MB=5
EMBEDDINGS_MODEL=all-mpnet-base-v2

# Default Superuser Configuration (Development)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=testpass123
DJANGO_SUPERUSER_EMAIL=admin@localhost.local

# Database Configuration (Railway provides these automatically)
# DATABASE_URL=postgresql://user:pass@host:port/dbname
# PGDATABASE=railway
# PGUSER=postgres
# PGPASSWORD=auto-generated
# PGHOST=host.railway.internal
# PGPORT=5432

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
